{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
      "source": "/",
      "function": "app"
      },
      {
      "source": "/main",
      "function": "app"
      },
      {
      "source": "/login",
      "function": "app"
      },
      {
      "source": "/qrcode",
      "function": "app"
      },
      {
      "source": "/login/check",
      "function": "app"
      },
      {
      "source": "/firebase/data",
      "function": "app"
      },
      {
      "source": "/qrcode/print",
      "function": "app"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
